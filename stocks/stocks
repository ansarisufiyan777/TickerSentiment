from nsetools import Nse
from pprint import pprint


class Stocks:
    @classmethod
    def fetch_stocks(cls):
        nse = Nse()
        print(nse)
        q = nse.get_quote('infy')
        pprint(q)
        return

    @classmethod
    def fetch_ticker_list(self):
        nse = Nse()
        index_codes = nse.get_stock_codes()
        pprint(index_codes)


if __name__ == '__main__':
    Stocks.fetch_ticker_list()
